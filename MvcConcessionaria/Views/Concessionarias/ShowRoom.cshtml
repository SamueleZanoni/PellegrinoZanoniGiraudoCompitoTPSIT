@{
    ViewData["Title"] = "Show Room";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #000;
            color: #fff;
        }

        .showroom-container {
            padding: 20px;
        }

        .showroom-item {
            margin-bottom: 20px;
        }

            .showroom-item img {
                width: 100%;
                height: auto;
            }

        .showroom-text {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container showroom-container">
        <div class="text-center">
            <h1 class="display-4">Show Room</h1>
        </div>

        <div class="row showroom-item">
            <div class="col-md-6">
                <img src="https://via.placeholder.com/400x300" alt="Immagine 1">
            </div>
            <div class="col-md-6 showroom-text">
                <h2>Berlina</h2>
                <p>Testo descrittivo per l'immagine 1. Questa è una descrizione dell'immagine.</p>
            </div>
        </div>

        <div class="row showroom-item">
            <div class="col-md-6 order-md-2">
                <img src="https://via.placeholder.com/400x300" alt="Immagine 2">
            </div>
            <div class="col-md-6 showroom-text order-md-1">
                <h2>SUV</h2>
                <p>Testo descrittivo per l'immagine 2. Questa è una descrizione dell'immagine.</p>
            </div>
        </div>

        <div class="row showroom-item">
            <div class="col-md-6">
                <img src="https://via.placeholder.com/400x300" alt="Immagine 3">
            </div>
            <div class="col-md-6 showroom-text">
                <h2>Sportiva</h2>
                <p>Testo descrittivo per l'immagine 3. Questa è una descrizione dell'immagine.</p>
            </div>
        </div>
    </div>
</body>
</html>
